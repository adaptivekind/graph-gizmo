{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "..",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["src/**/*.ts", "../core/src/**/*.ts", "../types/src/**/*.ts"]
}
